<script>
    require([
            "jquery",
            "owlcarousel",
            "domReady!",
            "mage/mage"
        ],
        function ($) {
            $('.owl-carousel').owlCarousel({
                loop: true,
                margin: 30,
                nav: true,
                navContainer: '#customNav',
                responsive: {
                    0: {
                        items: 1
                    },
                    600: {
                        items: 2
                    },
                    1000: {
                        items: 3
                    }
                },
                dots: false,
            })

            $('.comment-detail-action').click(function () {
                $(this).siblings().show();
            });

            $('.cancel').click(function () {
                $(this).parent().parent().hide();
            });

            var dataForm = $('.comment-form');
            dataForm.mage('validation', {});
        });
</script>
